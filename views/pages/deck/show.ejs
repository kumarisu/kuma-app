<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= deck.title %> - Deck Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2">ðŸ“‹ <%= deck.title %></h1>
                    <div class="btn-group">
                        <a href="/deck" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a href="/deck/<%= deck.id %>/edit" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <% if (deck.imageUrl) { %>
                                <img src="<%= deck.imageUrl %>" class="card-img-top" alt="<%= deck.title %>" style="height: 250px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= deck.title %></h5>
                                <p class="card-text"><%= deck.description || 'No description available' %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">
                                        <i class="fas fa-clone"></i> <%= deck.cards ? deck.cards.length : 0 %> cards
                                    </span>
                                    <small class="text-muted">
                                        Created: <%= new Date(deck.createdAt).toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-clone"></i> Cards (<%= deck.cards ? deck.cards.length : 0 %>)
                                </h5>
                            </div>
                            <div class="card-body">
                                <% if (deck.cards && deck.cards.length > 0) { %>
                                    <div class="row">
                                        <% deck.cards.forEach(function(card, index) { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="card h-100">
                                                    <div class="card-header bg-light">
                                                        <small class="text-muted">Card <%= index + 1 %></small>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="mb-2">
                                                            <strong>Front:</strong>
                                                            <p class="mb-0"><%= card.front || 'No front text' %></p>
                                                        </div>
                                                        <div>
                                                            <strong>Back:</strong>
                                                            <p class="mb-0"><%= card.back || 'No back text' %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-4">
                                        <i class="fas fa-clone fa-2x text-muted mb-3"></i>
                                        <p class="text-muted">No cards in this deck yet.</p>
                                        <a href="/deck/<%= deck.id %>/edit" class="btn btn-primary">
                                            <i class="fas fa-plus"></i> Add Cards
                                        </a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
