<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deck Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2">ðŸ“š Deck Management</h1>
                    <div>
                        <small class="text-muted me-3">Total: <%= decks.length %> deck(s)</small>
                        <a href="/deck/new" class="btn btn-primary me-2">
                            <i class="fas fa-plus"></i> Add New Deck
                        </a>
                        <form method="POST" action="/auth/logout" style="display: inline;">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Search Form -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" action="/deck" class="d-flex">
                            <div class="input-group">
                                <input 
                                    type="text" 
                                    name="search" 
                                    class="form-control" 
                                    placeholder="Search decks by title..." 
                                    value="<%= search || '' %>"
                                >
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <% if (search) { %>
                                <a href="/deck" class="btn btn-outline-danger">
                                    <i class="fas fa-times"></i> Clear
                                </a>
                                <% } %>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Deck List -->
                <% if (decks.length > 0) { %>
                    <div class="row">
                        <% decks.forEach(function(deck) { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <% if (deck.imageUrl) { %>
                                        <img src="<%= deck.imageUrl %>" class="card-img-top" alt="<%= deck.title %>" style="height: 200px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                        </div>
                                    <% } %>
                                    
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title"><%= deck.title %></h5>
                                        <p class="card-text text-muted flex-grow-1">
                                            <%= deck.description ? (deck.description.substring(0, 100) + (deck.description.length > 100 ? '...' : '')) : 'No description' %>
                                        </p>
                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="fas fa-clone"></i> <%= deck.cards ? deck.cards.length : 0 %> cards
                                                </small>
                                                <div class="btn-group" role="group">
                                                    <a href="/deck/<%= deck.id %>" class="btn btn-sm btn-outline-primary" title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/deck/<%= deck.id %>/edit" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button onclick="deleteDeck('<%= deck.id %>', '<%= deck.title %>')" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">
                            <% if (search) { %>
                                No decks found for "<%= search %>"
                            <% } else { %>
                                No decks found
                            <% } %>
                        </h4>
                        <% if (!search) { %>
                            <p class="text-muted">Get started by creating your first deck!</p>
                            <a href="/deck/new" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create First Deck
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the deck "<span id="deckTitleToDelete"></span>"?</p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteDeck(deckId, deckTitle) {
            document.getElementById('deckTitleToDelete').textContent = deckTitle;
            document.getElementById('deleteForm').action = `/deck/${deckId}`;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
</body>
</html>
