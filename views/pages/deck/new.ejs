<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Deck</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">
                                <i class="fas fa-plus"></i> Create New Deck
                            </h4>
                            <a href="/deck" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/deck">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="title" name="title" required>
                            </div>

                            <div class="mb-3">
                                <label for="imageUrl" class="form-label">Image URL</label>
                                <input type="url" class="form-control" id="imageUrl" name="imageUrl" placeholder="https://example.com/image.jpg">
                                <div class="form-text">Optional: Add an image URL for your deck</div>
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3" placeholder="Describe your deck..."></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Cards</label>
                                <div id="cardsContainer">
                                    <!-- Cards will be added dynamically -->
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addCard()">
                                    <i class="fas fa-plus"></i> Add Card
                                </button>
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a href="/deck" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Create Deck
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let cardIndex = 0;

        function addCard() {
            const cardHtml = `
                <div class="card mb-2" id="card-${cardIndex}">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="card-subtitle text-muted">Card ${cardIndex + 1}</h6>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeCard(${cardIndex})">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Front</label>
                                <textarea class="form-control" name="cards[${cardIndex}][front]" rows="2" placeholder="Front of card" required></textarea>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Back</label>
                                <textarea class="form-control" name="cards[${cardIndex}][back]" rows="2" placeholder="Back of card" required></textarea>
                            </div>
                        </div>
                        <input type="hidden" name="cards[${cardIndex}][id]" value="${cardIndex + 1}">
                    </div>
                </div>
            `;
            document.getElementById('cardsContainer').insertAdjacentHTML('beforeend', cardHtml);
            cardIndex++;
        }

        function removeCard(index) {
            document.getElementById(`card-${index}`).remove();
        }

        // Add initial card
        addCard();
    </script>
</body>
</html>
